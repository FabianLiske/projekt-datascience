{
  "name": "DS-DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--cpus=64",
    "--memory=200g",
    "--memory-swap=200g",
    "--shm-size=16g"
  ],
  "containerEnv": {
    "PYSPARK_SUBMIT_ARGS": "--conf spark.master=local[64] --driver-memory 180g --conf spark.sql.shuffle.partitions=256 --conf spark.sql.files.maxPartitionBytes=256m --conf spark.driver.maxResultSize=4g --conf spark.sql.parquet.compression.codec=snappy pyspark-shell"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "forwardPorts": [8888],
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/devuser/.ssh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gitconfig,target=/home/devuser/.gitconfig,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind"
  ],
  "remoteUser": "devuser",
  "postStartCommand": "jupyter lab --ip=0.0.0.0 --port=8888 --no-browser"
}
